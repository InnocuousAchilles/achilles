<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jcharante.achilles" version="1.3.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>achilles</name>
    <description>
        An app to scout matches and share them with either a server or p2p via qr codes.
    </description>
    <author email="contactme@jcharante.com" href="https://jcharante.com">
        Apache Cordova Team
    </author>
    <content src="home/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.1.2" />
    <engine name="browser" spec="~4.1.0" />
    <plugin name="phonegap-plugin-barcodescanner" spec="~6.0.5" />
    <icon src="www/static/internal/img/favicon/android-icon-192x192.png" />
</widget>
